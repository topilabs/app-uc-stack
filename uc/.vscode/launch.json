{ // some comment
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Black Magic Probe",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "external",
            // "serverpath": "/dev/cu.usbmodem97B6B71B1",
            // "serverArgs": [
            //     "-c", "adapter speed 5000",
            //     "-s", "/Users/ikellymo/pico/openocd/tcl"
            // ], 
            "gdbPath": "arm-none-eabi-gdb",
            "device": "RP2040",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "gdbTarget": "/dev/cu.usbmodem97B6B71B1",
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "main",
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        },
        {
            "name": "BMP Attach",
            "type": "cortex-debug",
            "servertype": "bmp",
            "request": "attach",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/ProjectFiles/blink.elf", // replace with your executable
            "interface": "swd",
            "device": "Raspberry RP2040 M0+",
            "BMPGDBSerialPort": "/dev/cu.usbmodem97B6B71B1", // Use whatever serial port makes sense for your OS and BMP setup
            "runToEntryPoint": "main",
        },
        {
            "name": "BMP Debug",
            "type": "cortex-debug",
            "servertype": "bmp",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/ProjectFiles/blink.elf", // replace with your executable
            "preLaunchTask": "CMake: build", // using stm32-for-vscode extension, this is the build task
            // "preLaunchTask": "mycmakebuildtask",
            "interface": "swd",
            "device": "Raspberry RP2040 M0+",
            "BMPGDBSerialPort": "/dev/cu.usbmodem97B6B71B1", // Use whatever serial port makes sense for your OS and BMP setup
            "runToEntryPoint": "main", // runToMain is deprecated.
            "liveWatch": {
                "enabled": false,
                "samplesPerSecond": 10
            },
            // "preLaunchCommands": ["./venv/bin/activate"],
        }
    ]
}