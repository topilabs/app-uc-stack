{ // some comment
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BMP Debug Remote (Core 0)",
            "type": "cortex-debug",
            "servertype": "bmp",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/ProjectFiles/blink.elf",
            "preLaunchTask": "CMake: build",
            "interface": "swd",
            "device": "RP2040",
            "BMPGDBSerialPort": "tcp:192.168.11.173:2000", // TCP connection to remote BMP
            "runToEntryPoint": "main",
            "showDevDebugOutput": "parsed",
            "armToolchainPath": "/usr/bin",
            "gdbPath": "/usr/bin/gdb-multiarch",
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "powerOverBMP": "enable", // Enable target power
            "targetId": 1, // Specify core 0 (first core)
        },
        {
            "name": "BMP Debug Remote (Core 1)",
            "type": "cortex-debug",
            "servertype": "bmp",
            "request": "launch",
            "cwd": "${workspaceRoot}",
